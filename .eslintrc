{
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": "error",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    // "no-console": 1,
    "no-var": "error",
    "no-const-assign": "error",
    "no-unused-vars": ["error", { "args": "none" }],
    "prefer-const": [
      "error",
      { "destructuring": "any", "ignoreReadBeforeAssign": false }
    ]
  }
}
